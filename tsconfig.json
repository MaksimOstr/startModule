{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/config.ts", "scripts"],
    "exclude": ["node_modules", "dist", "eslint.config.mts"]
}
